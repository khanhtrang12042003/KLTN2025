@{
    ViewData["Title"] = "Trang quản lý người dùng";
    ViewBag.AdminName = "Admin Bảo Tuân"; // Tên hiển thị góc phải
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container mt-4">
    <h3 class="fw-bold text-primary mb-4">📊 Bảng điều khiển (Dashboard)</h3>

    <div class="row text-center">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm p-3 border-primary">
                <h5 class="text-muted">Tổng tài khoản</h5>
                <h3 class="fw-bold text-primary">124</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm p-3 border-success">
                <h5 class="text-muted">Gia sư hoạt động</h5>
                <h3 class="fw-bold text-success">82</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm p-3 border-warning">
                <h5 class="text-muted">Phụ huynh</h5>
                <h3 class="fw-bold text-warning">42</h3>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm p-3 border-info">
                <h5 class="text-muted">Lớp đang mở</h5>
                <h3 class="fw-bold text-info">15</h3>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-light fw-bold">
            Biểu đồ tổng quan hoạt động (mô phỏng)
        </div>
        <div class="card-body">
            <div style="height: 280px;" class="bg-light d-flex justify-content-center align-items-center text-secondary">
                <em>Biểu đồ sẽ được hiển thị tại đây</em>
            </div>
        </div>
    </div>
</div>
