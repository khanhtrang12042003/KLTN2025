@{
    ViewData["Title"] = "Danh sách lớp mới";
    Layout = "~/Views/Shared/_LayoutGiaSU.cshtml";

    // Dữ liệu mẫu
    var danhSachLop = new List<dynamic>
    {
        new { LopHocId = 1, MonHoc = "Toán", KhoiLop = "8", DiaDiem = "Cầu Giấy, Hà Nội", SoBuoiHoc = 3, LichHoc = "T2 - T4 - T6 (17h - 19h)", HocPhi = 250000 },
        new { LopHocId = 2, MonHoc = "Văn", KhoiLop = "9", DiaDiem = "Ba Đình, Hà Nội", SoBuoiHoc = 2, LichHoc = "T3 - T5 (18h - 20h)", HocPhi = 230000 },
        new { LopHocId = 3, MonHoc = "Anh", KhoiLop = "10", DiaDiem = "Nam Từ Liêm, Hà Nội", SoBuoiHoc = 3, LichHoc = "T2 - T4 - T6 (18h - 20h)", HocPhi = 270000 },
    };
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold text-center">📚 Danh sách lớp học mới</h2>

    <!-- Bộ lọc -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Môn học</label>
                    <select class="form-select">
                        <option>Tất cả</option>
                        <option>Toán</option>
                        <option>Văn</option>
                        <option>Anh</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Khối lớp</label>
                    <select class="form-select">
                        <option>Tất cả</option>
                        <option>Lớp 6-9</option>
                        <option>Lớp 10-12</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Khu vực</label>
                    <select class="form-select">
                        <option>Tất cả</option>
                        <option>Cầu Giấy</option>
                        <option>Nam Từ Liêm</option>
                        <option>Ba Đình</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">🔍 Tìm kiếm</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách lớp -->
    <div class="row g-4">
        @foreach (var item in danhSachLop)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary fw-bold">
                            Lớp @item.LopHocId - @item.MonHoc @item.KhoiLop
                        </h5>
                        <p class="mb-1"><strong>Khu vực:</strong> @item.DiaDiem</p>
                        <p class="mb-1"><strong>Số buổi/tuần:</strong> @item.SoBuoiHoc</p>
                        <p class="mb-1"><strong>Lịch học:</strong> @item.LichHoc</p>
                        <p class="mb-1"><strong>Học phí:</strong> @string.Format("{0:N0}đ/buổi", item.HocPhi)</p>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="ChiTietLopHoc"
                               asp-route-id="@item.LopHocId"
                               class="btn btn-outline-primary btn-sm w-50 me-1">
                                Xem chi tiết
                            </a>

                            <a asp-action="UngTuyenLopHoc"
                               asp-route-id="@item.LopHocId"
                               class="btn btn-outline-success btn-sm w-50 ms-1">
                                Ứng tuyển
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
