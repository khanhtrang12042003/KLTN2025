@{
    ViewData["Title"] = "Đánh giá Gia sư";
    Layout = "_Layout";
}

<div class="container py-5">
    <!-- Header -->
    <section class="text-center mb-5">
        <h2 class="fw-bold text-primary mb-2">Đánh giá Gia sư</h2>
        <p class="text-muted">Vui lòng chia sẻ cảm nhận của bạn sau khi lớp học hoàn thành</p>
    </section>

    <!-- Thông tin lớp học -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">Thông tin lớp học</h5>
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Mã lớp:</strong> #LH004</p>
                    <p><strong>Môn học:</strong> Vật lý 8</p>
                    <p><strong>Lịch học:</strong> Thứ 7, CN (14h - 16h)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Gia sư:</strong> Phạm Minh D</p>
                    <p><strong>Thời gian dạy:</strong> 1/9/2025 – 15/10/2025</p>
                    <p><strong>Học phí:</strong> 230.000 VNĐ/buổi</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form đánh giá -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-4">
            <h5 class="fw-semibold mb-3">Form đánh giá</h5>

            <form id="reviewForm">
                <div class="mb-4">
                    <label class="form-label fw-semibold">Mức độ hài lòng:</label>
                    <div id="ratingStars" class="d-flex gap-2 fs-3 text-warning">
                        <i class="bi bi-star" data-value="1"></i>
                        <i class="bi bi-star" data-value="2"></i>
                        <i class="bi bi-star" data-value="3"></i>
                        <i class="bi bi-star" data-value="4"></i>
                        <i class="bi bi-star" data-value="5"></i>
                    </div>
                    <input type="hidden" id="ratingValue" name="Rating" value="0" />
                </div>

                <div class="mb-4">
                    <label for="reviewContent" class="form-label fw-semibold">Nhận xét chi tiết:</label>
                    <textarea id="reviewContent" class="form-control rounded-3" rows="5" placeholder="Nhập nhận xét của bạn về chất lượng dạy, thái độ, sự tiến bộ của học sinh..."></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-4 fw-semibold">Gửi đánh giá</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Thông báo -->
    <div id="alertBox" class="alert alert-success mt-4 text-center d-none rounded-4">
        Cảm ơn bạn! Đánh giá của bạn đã được gửi thành công 🎉
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const stars = document.querySelectorAll("#ratingStars i");
            const ratingInput = document.getElementById("ratingValue");
            const form = document.getElementById("reviewForm");
            const alertBox = document.getElementById("alertBox");

            // ⭐ Xử lý click chọn sao
            stars.forEach(star => {
                star.addEventListener("click", function () {
                    const rating = this.dataset.value;
                    ratingInput.value = rating;

                    stars.forEach(s => {
                        if (s.dataset.value <= rating) {
                            s.classList.add("bi-star-fill");
                            s.classList.remove("bi-star");
                        } else {
                            s.classList.add("bi-star");
                            s.classList.remove("bi-star-fill");
                        }
                    });
                });
            });

            // 📨 Gửi đánh giá
            form.addEventListener("submit", function (e) {
                e.preventDefault();
                const rating = ratingInput.value;
                const content = document.getElementById("reviewContent").value.trim();

                if (rating == 0) {
                    alert("Vui lòng chọn số sao đánh giá!");
                    return;
                }
                if (!content) {
                    alert("Vui lòng nhập nhận xét!");
                    return;
                }

                // Hiện thông báo gửi thành công
                alertBox.classList.remove("d-none");
                form.reset();
                stars.forEach(s => s.classList.remove("bi-star-fill"));
                stars.forEach(s => s.classList.add("bi-star"));
                ratingInput.value = 0;
                window.scrollTo({ top: alertBox.offsetTop - 100, behavior: 'smooth' });
            });
        });
    </script>
}
