@{
    // ⚙️ Giả lập đăng nhập để giữ bố cục Role (Admin, User)
    // Sau này chỉ cần xóa đoạn này khi tích hợp Identity thật.
    var isLoggedIn = false; // true = đã đăng nhập, false = khách
    var userRole = "Guest"; // "Admin", "Tutor", "Student" hoặc "Guest"
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Trung tâm Gia sư Amsterdam Bảo Tuân</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold text-primary fs-4" href="/">
                    <img src="~/img/Logo-1.png" alt="Logo" style="height:40px;width:auto;margin-right:10px;">
                    Trung tâm Gia sư Amsterdam Bảo Tuân
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="/About">Giới thiệu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Courses">Khoá học</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Contact">Liên hệ</a></li>

                        @if (!isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary ms-2" href="/TaiKhoan/ChonVaiTro">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" href="/TaiKhoan/ChonVaiTro">Đăng ký</a>
                            </li>

                        }
                        else
                        {
                            if (userRole == "Admin")
                            {
                                <li class="nav-item"><a class="nav-link text-danger fw-bold" href="/Admin">Quản trị</a></li>
                            }
                            else if (userRole == "Tutor")
                            {
                                <li class="nav-item"><a class="nav-link" href="/Tutor">Gia sư</a></li>
                            }
                            else if (userRole == "Student")
                            {
                                <li class="nav-item"><a class="nav-link" href="/Student">Học viên</a></li>
                            }

                            <li class="nav-item"><a class="btn btn-outline-secondary ms-2" href="/Account/Logout">Đăng xuất</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid" style="margin-top: 80px;">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-4 bg-light mt-5">
        <p class="mb-0">© 2025 Trung tâm Gia sư Amsterdam Bảo Tuân. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
