@{
    var role = Context.Request.Query["role"].ToString().ToLower();
    var isTutor = role == "giasu";
    var title = isTutor ? "Đăng nhập Gia sư" : "Đăng nhập Phụ huynh";
    ViewData["Title"] = title + " - Trung tâm Gia sư Amsterdam Bảo Tuân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0 p-4">
                <h3 class="fw-bold text-center mb-4 @(isTutor ? "text-warning" : "text-primary")">@title</h3>

                <form method="post" action="/TaiKhoan/DangNhap">
                    <input type="hidden" name="role" value="@role" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" name="email" class="form-control" required placeholder="Nhập email của bạn" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mật khẩu</label>
                        <input type="password" name="password" class="form-control" required placeholder="Nhập mật khẩu" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a href="/TaiKhoan/QuenMatKhau" class="text-decoration-none small text-muted">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="btn w-100 fw-semibold @(isTutor ? "btn-warning" : "btn-primary")">Đăng nhập</button>

                    <div class="text-center mt-3">
                        <span class="text-muted small">Chưa có tài khoản?</span>
                        <a href="/TaiKhoan/DangKy?role=@role" class="text-decoration-none fw-semibold">Đăng ký ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
