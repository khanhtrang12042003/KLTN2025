@{
    string? VaiTro = Context.Request.Query["VaiTro"].ToString().ToLower();
    bool isTutor = VaiTro == "giasu";
    string? title = isTutor ? "Đăng nhập Gia sư" : "Đăng nhập Phụ huynh";
    ViewData["Title"] = $"{title} -";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0 p-4">
                <h3 class="fw-bold text-center mb-4 @(isTutor ? "text-warning" : "text-primary")">@title</h3>

                @if (TempData["ThongBao"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["ThongBao"]</div>
                }

                @if (ViewBag.ThongBao != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.ThongBao</div>
                }

                <form method="post" action="/TaiKhoan/DangNhap">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="VaiTro" value="@VaiTro" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Tên đăng nhập</label>
                        <input type="text" name="TenDangNhap" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Mật khẩu</label>
                        <input type="password" name="MatKhau" class="form-control" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a href="/TaiKhoan/QuenMatKhau" class="text-decoration-none small text-muted">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="btn w-100 fw-semibold @(isTutor ? "btn-warning" : "btn-primary")">
                        Đăng nhập
                    </button>

                    <div class="text-center mt-3">
                        <span class="text-muted small">Chưa có tài khoản?</span>
                        <a href="/TaiKhoan/DangKy?VaiTro=@VaiTro" class="text-decoration-none fw-semibold">Đăng ký
                            ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>